<div id="main">
    <div id="post-list">
        <ul class="archives-post-list">
            <% page.posts.each(function(post){ %>
            <li class="post-items" _href="<%- url_for(post.path) %>">
                <%
                    var info = post.date;
                    if (is_category()) info = page.category;
                    else if (is_tag()) info = page.tag;
                %>
                <p class="info"><%= info %></p>
                <h2 class="post-item-title"><%= post.title %></h2>
                <%- partial('_partial/article-meta', {post: post}) %>
            </li>
            <% }) %>
        </ul>
    </div>
</div>
<%- partial('_partial/pagination') %>

